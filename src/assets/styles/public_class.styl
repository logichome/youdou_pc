@import './common.styl';

.container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow-y auto
.mgt10
  margin-top 10px
.mgl10
  margin-left 10px
.login-title
  padding 40px 0 30px
  text-align center
  color $titleColor
  font-size 24px
.info-title
  font-size: 20px
  color $baseColor
  height: 76
  line-height: 76px
  padding: 0 30px
  border-bottom: 1px solid #eee
.input-box-select.input-box
  input 
    height 36px
.input-box
  position relative
  .input-iconfont
    position absolute
    z-index: 2
    height: 46px
    width 46px
    text-align center
    line-height: 46px
    font-size: 25px
    color #666
  input
  textarea
    height 46px 
    border-radius 0
    padding-left: 45px
    background-color: rgb(221, 227, 236)
    color: rgb(130, 144, 163)
    border: none
    font-size: 14px
    font-family: 'microsoft yahei'
  input.el-select__input
    background-color transparent
    padding-left: 0 !important
  .el-select
    display: block
  .el-date-editor.el-input
    .el-input__inner
      padding-left: 30px
.input-box.input-right-icon
  .right-icon
    position absolute
    top: 0
    right: 0
    z-index: 2
    height: 46px
    width 46px
    text-align center
    line-height: 46px
    font-size: 25px
    color rgb(130, 144, 163)
    cursor pointer
  input
    padding-right: 45px
    cursor pointer
    
.input-box.icon-less
  input
  textarea
    padding-left 15px
.input-box.adress-input
  input
    cursor pointer
.primary-button
    display: block;
    cursor: pointer;
    width: 100px;
    height: 30px;
    line-height: 30px;
    background-color: #e75f15;
    color: #fff;
    border-radius: 4px;
.primary-button[disabled]
  background-color #ccc


.el-checkbox__input.is-checked+.el-checkbox__label
.el-radio__input.is-checked+.el-radio__label
  color rgb(231, 95, 21) !important
.el-checkbox__input.is-checked .el-checkbox__inner, .el-checkbox__input.is-indeterminate .el-checkbox__inner
.el-radio__input.is-checked .el-radio__inner
  background-color: rgb(231, 95, 21) !important
  border-color: rgb(231, 95, 21) !important
.el-checkbox__inner:hover
.el-radio__inner:hover
  border-color: rgb(231, 95, 21) !important
.el-slider__button
  border-color rgb(231, 95, 21) !important
.el-slider__bar
  background-color rgb(231, 95, 21) !important
.el-slider__button-wrapper
  top -18px !important
.el-input.is-active .el-input__inner, .el-input__inner:focus
.el-textarea__inner:focus
  border-color rgb(231, 95, 21) !important
.el-pager li.active
.el-pager li:hover
  color rgb(231, 95, 21) !important
.el-select-dropdown__item.selected
  color rgb(231, 95, 21) !important
.el-form-item.is-success .el-input__inner, .el-form-item.is-success .el-input__inner:focus, .el-form-item.is-success .el-textarea__inner, .el-form-item.is-success .el-textarea__inner:focus
  border-color #d8dce5 !important