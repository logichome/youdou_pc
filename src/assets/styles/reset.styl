/*CSS初始化 Begin*/
body
  color: rgb(125, 145, 170);
  font-family 'microsoft yahei'
  background: #fff
  font-size: 14px
  line-height: 1
html, body, ul, li, ol, dl, dd, dt, p, h1, h2, h3, h4, h5, h6, form, fieldset, legend, img, input, button,blockquote ,textarea,button
  margin: 0
  padding: 0

fieldset, img, input, button, div, h2 , textarea
  border: none
  outline-style: none

ul, ol 
  list-style: none

select, input img
  vertical-align: middle

select, input, textarea 
  font-size: 14px
  margin: 0

textarea 
  resize: none

a 
  color: inherit
  text-decoration: none

a,img,input,textarea,div
  -webkit-tap-highlight-color transparent

a:hover 
  color: inherit

h1, h2, h3, h4, h5, h6 
  text-decoration: none
  font-weight: normal
  font-size: 16px

s, i, em 
  font-style: normal
  text-decoration: none
/*CSS初始化 End*/

/*公共类 Begin*/
.clearfix:after 
  content: ""
  height: 0
  line-height: 0
  display: block
  visibility: hidden
  clear: both

.clearfix 
  zoom: 1

.fl 
  float: left

.fr 
  float: right

.pr 
  position: relative

.pa 
  position: absolute

.pf
  position: fixed

.mgauto
  margin:0 auto

.tac
  text-align: center

.tal
  text-align: left

.tar
  text-align: right

.vam
  vertical-align:middle

.password-input
  ime-mode: disabled

/*公共类 End*/

input::-webkit-input-placeholder  /* WebKit browsers */
  color:#999

input:-moz-placeholder  /* Mozilla Firefox 4 to 18 */
  color:#999

input::-moz-placeholder  /* Mozilla Firefox 19+ */
  color:#999

input:-ms-input-placeholder  /* Internet Explorer 10+ */
  color:#999

